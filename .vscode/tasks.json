{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean",
      "type": "shell",
      "command": "rm -f build/ main test-suite|| true",
      "problemMatcher": []
    },
    {
      "label": "Build Main",
      "type": "shell",
      "command": [
        "vendor/cc65/bin/cl65",
        "-o build/main.prg",
        "--asm-include-dir vendor/cc65/asminc",
        "--asm-include-dir vendor/cc65/libsrc",
        "-L vendor/cc65/lib",
        "-Ln build/main.labels",
        "--listing build/main.listing",
        "-u __EXEHDR__",
        "-t c64",
        "-C c64-asm.cfg",
        "main.asm"
      ],
      "dependsOn": ["Clean Main"],
      "problemMatcher": [
          {
              "owner": "ca65",
              "fileLocation": "relative",
              "pattern": [
                  {
                      "regexp": "^(.+)\\((\\d+)\\):\\s+(Error|Warning|Note):\\s+(.+)$",
                      "file": 1,
                      "line": 2,
                      "severity": 3,
                      "message": 4
                  }
              ]
          },
          {
              "owner": "ca65",
              "fileLocation": "relative",
              "pattern": [
                  {
                      "regexp": "(Unresolved external `(.*)') referenced in:\\s*$",
                      "message": 1,
                      "code": 2
                  },
                  {
                      "regexp": "\\s*(.*)\\((\\d+)\\)",
                      "file": 1,
                      "line": 2,
                      "loop": true
                  }
              ]
          },
          {
              "owner": "ca65",
              "fileLocation": "relative",
              "pattern": [
                  {
                      "regexp": "^ld65: (.*?): ((.*\\.cfg)\\((\\d+)\\): )?(.*)$",
                      "severity": 1,
                      "file": 3,
                      "line": 4,
                      "message": 5
                  }
              ]
          },
          {
              "owner": "ca65",
              "fileLocation": "relative",
              "pattern": [
                  {
                      "regexp": "^ld65: (.*?): ((.*)\\((\\d+)\\): )?(.*)$",
                      "severity": 1,
                      "file": 3,
                      "line": 4,
                      "message": 5
                  }
              ]
          }
      ]
    },
    {
      "label": "Build Tests",
      "type": "shell",
      "options": {
        "env": {
          "CA65_INC": "vendor/c64unit/cross-assemblers/ca65"
        }
      },
      "command": [
        "vendor/cc65/bin/cl65",
        "-o build/test-suite.prg",
        "--asm-include-dir vendor/cc65/asminc",
        "-Ln build/test-suite.labels",
        "-Oir",
        "-t c64",
        "-L vendor/cc65/lib",
        // "-prg", sessionState.prgfilename,
        // "-I vendor/c64unit/cross-assemblers/ca65",
        // "-I tests/test-cases",
        // "-I src",
        "-C tests/c64unit.cfg",
        "test-suite.asm"
      ],
      "dependsOrder": "sequence",
      "dependsOn": ["Clean"],
      "problemMatcher": [
        {
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [
                {
                    "regexp": "^(.+)\\((\\d+)\\):\\s+(Error|Warning|Note):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            ]
        },
        {
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [
                {
                    "regexp": "(Unresolved external `(.*)') referenced in:\\s*$",
                    "message": 1,
                    "code": 2
                },
                {
                    "regexp": "\\s*(.*)\\((\\d+)\\)",
                    "file": 1,
                    "line": 2,
                    "loop": true
                }
            ]
        },
        {
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [
                {
                    "regexp": "^ld65: (.*?): ((.*\\.cfg)\\((\\d+)\\): )?(.*)$",
                    "severity": 1,
                    "file": 3,
                    "line": 4,
                    "message": 5
                }
            ]
        },
        {
            "owner": "ca65",
            "fileLocation": "relative",
            "pattern": [
                {
                    "regexp": "^ld65: (.*?): ((.*)\\((\\d+)\\): )?(.*)$",
                    "severity": 1,
                    "file": 3,
                    "line": 4,
                    "message": 5
                }
            ]
        }
    ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "revealProblems": "onProblem"
      }
    },

    {
      "label": "Launch VICE",
      "type": "shell",
      "command": "/usr/local/bin/x64sc build/main.prg",
      "problemMatcher": {
        // The problem is owned by the cpp language service.
        "owner": "x64sc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^.+(Error|Warning) - `(.+)' (.+)$",
          "severity": 1,
          "file": 2,
          "message": 3
        }
      }
    },

    {
      "label": "Launch Tests",
      "type": "shell",
      "command": "/usr/local/bin/x64sc build/test-suite.prg",
      "problemMatcher": {
        // The problem is owned by the cpp language service.
        "owner": "x64sc",
        "fileLocation": ["autoDetect"],
        "pattern": {
          "regexp": "^.+(Error|Warning) - `(.+)' (.+)$",
          "severity": 1,
          "file": 2,
          "message": 3
        }
      }
    },

    {
      "label": "run",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Main", "Launch VICE"],
      "problemMatcher": {
        // The problem is owned by the cpp language service.
        "owner": "x64sc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^.+(Error|Warning) - `(.+)' (.+)$",
          "severity": 1,
          "file": 2,
          "message": 3
        }
      }
    },
    {
      "label": "fix-labels",
      "isBackground": true,
      "command": [
        "./bin/fix-labels.sh"
      ],
      "args": [
        "build/main.labels"
      ],
      "problemMatcher": []
    },
    {
      "label": "fix-test-labels",
      "isBackground": true,
      "command": [
        "./bin/fix-labels.sh"
      ],
      "args": [
        "build/test-suite.labels"
      ],
      "problemMatcher": []
    },

    {
      "label": "debug",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Main", "Launch VICE"]
    },

    {
      "label": "test",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Tests", "Launch Tests"],
      "problemMatcher": {
        // The problem is owned by the cpp language service.
        "owner": "x64sc",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^.+(Error|Warning) - `(.+)' (.+)$",
          "severity": 1,
          "file": 2,
          "message": 3
        }
      }
    },
    {
      "label": "Run Test (C64Debugger)",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Tests", "fix-test-labels"],
      "isBackground": true,
      "command": [
        "./bin/c64-debugger.sh"
      ],
      "args": [
        "build/test-suite.prg",
        "build/test-suite.labels",
        "${workspaceFolder}/test.brk",
        "${workspaceFolder}/test.watch"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },

    {
      "label": "Debug (C64Debugger)",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Main", "fix-labels"],
      "isBackground": true,
      "command": [
        "./bin/c64-debugger.sh"
      ],
      "args": [
        "${workspaceFolder}/build/main.prg",
        "${workspaceFolder}/build/main.labels",
        "${workspaceFolder}/main.brk",
        "${workspaceFolder}/main.watch"
      ],
      "problemMatcher": []
    }
    // For C64Debugger
    // "-pass",
    // "-symbols", sessionState.labelsFilename,
  ]
}